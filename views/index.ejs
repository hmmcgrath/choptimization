<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css">
  </head>
  <body class="ch-container container-fluid">
    <div class="row">
    	<div class="col">
    		<form>
				<div class="form-group">
					<a class=" btn btn-block  btn-lg btn-primary" href="/addPatient">
						Add New Patient
					</a>
				</div>
			</form>
			<div class="table-responsive">
				<table class="table table-hover hidden-s-down">
					<thead class="thead-default">
						<tr>
							<th>Name</th>
							<th>Date of Birth</th>
							<th>Inpatient Unit</th>
							<th>Census</th>
							<th>Time of Admittance</th>	
							<th>Status</th>
							<th>Estimated Time Until Transfer</th>	
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% patients.forEach(function(patient) { %>
								 	<tr id=<%= patient.id %> >
				        					<td><%= patient.name %> </td>
				        					<td><%= patient.dob %></td>
				        					<td><%= patient.unit %></td>
				        					<td><%= patient.census %></td>
				        					<td><%= patient.timeOfAdmit %></td>
				        					<td><%= patient.status %></td>
				        					<td><%= patient.transferTime %></td>
				        					<td><button class="btn btn-danger btn-sm"><i class="fa ch-times-rectangle fa-times-rectangle"></i></button></td>
			        				</tr>
	    				<% }); %>
					</tbody>
				</table>
			</div>
    	</div>
    </div>

    <!-- jQuery first, then Tether, then Bootstrap JS. -->
	<script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
    <script src="/javascripts/main.js"></script>
  </body>
</html>
